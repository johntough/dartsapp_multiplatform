extends layout

block layout-content
    block layout-content
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            .collapse.navbar-collapse(id='navbarSupportedContent')
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a.nav-link(href='/') Home
                    li.nav-item.active
                            a.nav-link(href='#') Teams
                    li.nav-item
                        a.nav-link(href='/fixtures_selection') Team Fixtures
                    li.nav-item
                        a.nav-link(href='/team-results') Team Results
                    li.nav-item
                        a.nav-link(href='/players') BMC Players

    div.View.TeamsView
        h1.Banner BMC Darts
        div.Message
            div.Title
              h3 Teams

            table(class="table")
                thead(class="thead-dark")
                    tr: th Team names
                tbody
                    each team in teamnames
                        tr
                            td= team.name